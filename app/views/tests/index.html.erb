<h1>Tests</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Number of questions</th>
    <th colspan="2">Action</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td align="center"><%= test.level %></td>
      <td align="center"><%= test.questions.count %></td>
      <td><%= link_to 'Show', test_url(test) %></td>
      <td><%= link_to 'Edit', edit_test_url(test) %></td>
    </tr>
  <% end %>
</table>
