<h2>Create New Test</h2>
<%= form_with model: @test, local: true do |form| %>
  <p>
    <%= form.label :title, "Test:" %>
    <%= form.text_field :title, id: :test_title %>
  </p>
  <p>
    <%= form.label :category_id, "Category:" %>
    <%= form.collection_select :category_id, Category.all, :id, :title, promt: true  %>
  </p>
  <p>
    <%= form.label :level, "Level:" %>
    <%= form.number_field :level, id: :test_level %>
  </p>
  <p>
    <%= form.label :author_id %>
    <%= form.collection_select :author_id, User.all, :id, :nickname, promt: true %>
  </p>
  <%= form.submit %>
<% end %>
<br/>
