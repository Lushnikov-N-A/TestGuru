<h1>Passing the test: "<%= @test_passing.test.title %>".</h1>
<p><b>All questions of test: <%= @test_passing.questions_count  %></b></p><br>
<b>Question â„– <%= @test_passing.question_number  %></b><br>
<b><%= @test_passing.current_question.title  %></b>

<%= form_with url: test_passing_path(@test_passing), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passing.current_question.answers, :id, :title, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <p><%= form.button 'Next' %></p>
<% end %>
